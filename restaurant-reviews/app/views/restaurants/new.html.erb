New Restaurant Form
<%= form_for  @restaurant  do |f| %>
  <div class="field">
    <%= f.label :name %> <br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :address %> <br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :city %> <br />
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :zip %><br />
    <%= f.text_field :zip %><br />
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %><br />
  </div>
  <div class="actions">
    <%= f.submit "Add Restaurant" %>
  </div>
<% end %>
<div>
  <%= if !@restaurant.save  do flash[:error] %>
  <%= else flash[:success] %>
<% end %>
</div>

<p>
<%= link_to 'Home', root_path %>
</p>
